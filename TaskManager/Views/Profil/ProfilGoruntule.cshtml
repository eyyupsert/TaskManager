@using Microsoft.AspNetCore.Http;
@model TaskManager.Models.Personel
@{
    ViewData["Title"] = "Profil";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string fullname = Context.Session.GetString("fullname");
    string mail = Context.Session.GetString("email");
    string telefon = Context.Session.GetString("tel");

}

<div class="container">
    <div class="main-body">



        <!-- /Breadcrumb -->

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>@fullname</h4>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-8">
                <div class="card mb-3">

                    <div class="card-body">
                        <div class="row">

                            <div class="col-sm-3">
                                <h6 class="mb-0">Adı Soyadı</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <label> @fullname</label>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Mail Adresi</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <label>@mail</label>
                            </div>
                        </div>
                        <hr>

                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Telefon</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <label>@telefon</label>
                            </div>
                        </div>
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
